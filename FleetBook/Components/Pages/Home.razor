@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@using FleetBook.Models
@using FleetBook.Services
@rendermode InteractiveServer
@inject CarApiService CarApiService
@inject IJSRuntime JS
@inject NavigationManager Navigation


<AuthorizeView>
    <Authorizing>
        <p>Sprawdzanie autoryzacji...</p>
    </Authorizing>
    <Authorized>
        <div class="container mt-5">
            <h1>FleetBook</h1>
            <p>Witaj w systemie rezerwacji pojazd贸w!</p>

            <p>Zalogowany jako: <strong>@context.User.Identity?.Name</strong></p>

            <!-- Button to add new car -->
            <button class="btn btn-success mb-3" @onclick="OpenAddModal">
                <i class="bi bi-plus-circle"></i> Dodaj samoch贸d
            </button>

            @if (cars == null)
            {
                <p>adowanie listy samochod贸w...</p>
            }
            else if (cars.Count == 0)
            {
                <p>Brak samochod贸w w systemie.</p>
            }
            else
            {
                <table class="table table-striped mt-3">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Marka</th>
                            <th>Model</th>
                            <th>Rejestracja</th>
                            <th>Rok</th>
                            <th>Dostpny</th>
                            <th>Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var car in cars)
                    {
                        <tr>
                            <td>@car.Id</td>
                            <td>@car.Marka</td>
                            <td>@car.Model</td>
                            <td>@car.Rejestracja</td>
                            <td>@car.Rok</td>
                            <td>
                                <span class="badge @(car.Dostepny ? "bg-success" : "bg-danger")">
                                    @(car.Dostepny ? "Dostpny" : "Niedostpny")
                                </span>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-primary" @onclick="() => OpenEditModal(car)">
                                    Edytuj
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(car.Id)">
                                    Usu
                                </button>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
        </div>

        <!-- Add/Edit Modal -->
        <div class="modal @(showCarModal ? "show" : "")" id="carModal" tabindex="-1" style="@(showCarModal ? "display: block;" : "display: none;")">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@(isEditMode ? "Edytuj samoch贸d" : "Dodaj nowy samoch贸d")</h5>
                        <button type="button" class="btn-close" @onclick="CloseModal"></button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="mb-3">
                                <label for="marka" class="form-label">Marka</label>
                                <input type="text" class="form-control" id="marka" @bind="formCar.Marka" required />
                            </div>
                            <div class="mb-3">
                                <label for="model" class="form-label">Model</label>
                                <input type="text" class="form-control" id="model" @bind="formCar.Model" required />
                            </div>
                            <div class="mb-3">
                                <label for="rejestracja" class="form-label">Rejestracja</label>
                                <input type="text" class="form-control" id="rejestracja" @bind="formCar.Rejestracja" required />
                            </div>
                            <div class="mb-3">
                                <label for="rok" class="form-label">Rok produkcji</label>
                                <input type="number" class="form-control" id="rok" @bind="formCar.Rok" required />
                            </div>
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="dostepny" @bind="formCar.Dostepny" />
                                <label class="form-check-label" for="dostepny">
                                    Dostpny
                                </label>
                            </div>
                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger" role="alert">
                                    @errorMessage
                                </div>
                            }
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Anuluj</button>
                        <button type="button" class="btn btn-primary" @onclick="SaveCar" disabled="@isLoading">
                            @(isLoading ? "Zapisywanie..." : "Zapisz")
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal backdrop -->
        @if (showCarModal)
        {
            <div class="modal-backdrop fade show"></div>
        }

        <!-- Delete Confirmation Modal -->
        <div class="modal @(showDeleteModal ? "show" : "")" id="deleteModal" tabindex="-1" style="@(showDeleteModal ? "display: block;" : "display: none;")">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Potwierdzenie usunicia</h5>
                        <button type="button" class="btn-close" @onclick="CloseDeleteModal"></button>
                    </div>
                    <div class="modal-body">
                        <p>Czy na pewno chcesz usun ten samoch贸d?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseDeleteModal">Anuluj</button>
                        <button type="button" class="btn btn-danger" @onclick="DeleteCar" disabled="@isLoading">
                            @(isLoading ? "Usuwanie..." : "Usu")
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal backdrop for delete -->
        @if (showDeleteModal)
        {
            <div class="modal-backdrop fade show"></div>
        }
    </Authorized>
    <NotAuthorized>
        <div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 50vh;">
            <div class="text-center">
                <h1>FleetBook</h1>
                <p>System zarzdzania flot pojazd贸w</p>
                <p>Aby korzysta z systemu, zaloguj si.</p>
                <a href="/login" class="btn btn-primary btn-lg">Przejd藕 do logowania</a>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>


@code {
    private List<CarDto>? cars;
    private CarDto formCar = new();
    private int deleteCarId;
    private bool isEditMode;
    private bool isLoading;
    private string errorMessage = "";
    private bool showCarModal;
    private bool showDeleteModal;

    [CascadingParameter]
    private Task<AuthenticationState> AuthStateTask { get; set; } = default!;

    protected override async Task OnInitializedAsync()
{
    Console.WriteLine(" Home.OnInitializedAsync started");
    
    var authState = await AuthStateTask;
    
    if (authState.User.Identity is null || !authState.User.Identity.IsAuthenticated)
    {
        Console.WriteLine(" User not authenticated, redirecting to /login");
        Navigation.NavigateTo("/login", forceLoad: true);
        return;
    }

    Console.WriteLine(" Calling CarApiService.GetCarsAsync()");
    cars = await CarApiService.GetCarsAsync();
    Console.WriteLine($" Got {cars?.Count ?? 0} cars from API");
}

    private async Task OpenAddModal()
    {
        isEditMode = false;
        formCar = new CarDto();
        errorMessage = "";
        showCarModal = true;
        StateHasChanged();
    }

    private async Task OpenEditModal(CarDto car)
    {
        isEditMode = true;
        formCar = new CarDto
        {
            Id = car.Id,
            Marka = car.Marka,
            Model = car.Model,
            Rejestracja = car.Rejestracja,
            Rok = car.Rok,
            Dostepny = car.Dostepny
        };
        errorMessage = "";
        showCarModal = true;
        StateHasChanged();
    }

    private async Task SaveCar()
    {
        if (string.IsNullOrWhiteSpace(formCar.Marka) || string.IsNullOrWhiteSpace(formCar.Model))
        {
            errorMessage = "Marka i model s wymagane!";
            return;
        }

        isLoading = true;
        try
        {
            bool success;
            if (isEditMode)
            {
                success = await CarApiService.UpdateCarAsync(formCar.Id, formCar);
            }
            else
            {
                success = await CarApiService.AddCarAsync(formCar);
            }

            if (success)
            {
                cars = await CarApiService.GetCarsAsync();
                await CloseModal();
                errorMessage = "";
            }
            else
            {
                errorMessage = "Bd podczas zapisywania samochodu!";
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ConfirmDelete(int id)
    {
        deleteCarId = id;
        showDeleteModal = true;
        StateHasChanged();
    }

    private async Task DeleteCar()
    {
        isLoading = true;
        try
        {
            var success = await CarApiService.DeleteCarAsync(deleteCarId);
            if (success)
            {
                cars = await CarApiService.GetCarsAsync();
                await CloseDeleteModal();
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CloseModal()
    {
        showCarModal = false;
        formCar = new();
        errorMessage = "";
        StateHasChanged();
    }

    private async Task CloseDeleteModal()
    {
        showDeleteModal = false;
        deleteCarId = 0;
        StateHasChanged();
    }
}

