    </Authorizing>
    <Authorized>
    <div class="d-flex">
        <!-- LEWA KOLUMNA: MENU -->
        <div class="sidebar-left" style="width: 260px;"">
            <NavMenu />
        </div>

        <!-- PRAWA KOLUMNA: TRE≈öƒÜ STRONY -->
        <div class="flex-grow-1">
            <div class="container mt-5">
                <h1>FleetBook</h1>
                <p>Witaj w systemie rezerwacji pojazd√≥w!</p>

                <p>Zalogowany jako: <strong>@context.User.Identity?.Name</strong></p>


                <button class="btn btn-success mb-3" @onclick="OpenAddModal">
                    <i class="bi bi-plus-circle"></i> Dodaj samoch√≥d
                </button>

                @if (cars == null)
                {
                    <p>≈Åadowanie listy samochod√≥w...</p>
                }
                else if (cars.Count == 0)
                {
                    <p>Brak samochod√≥w w systemie.</p>
                }
                else
                {
                    <table class="table table-striped mt-3">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Marka</th>
                                <th>Model</th>
                                <th>Rejestracja</th>
                                <th>Rok</th>
                                <th>Dostƒôpny</th>
                                <th>Akcje</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var car in cars)
                        {
                            <tr>
                                <td>@car.Id</td>
                                <td>@car.Marka</td>
                                <td>@car.Model</td>
                                <td>@car.Rejestracja</td>
                                <td>@car.Rok</td>
                                <td>
                                    <span class="badge @(car.Dostepny ? "bg-success" : "bg-danger")">
                                        @(car.Dostepny ? "Dostƒôpny" : "Niedostƒôpny")
                                    </span>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-primary" @onclick="() => OpenEditModal(car)">
                                        Edytuj
                                    </button>
                                    <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(car.Id)">
                                        Usu≈Ñ
                                    </button>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }

                <!-- Modale zostajƒÖ TAK JAK SƒÑ poni≈ºej -->
                @* Add/Edit Modal, Delete Modal, backdrop ‚Äì nic nie zmieniaj *@
            </div>
        </div>
    </div>
</Authorized>
    <NotAuthorized>
        <div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 50vh;">
            <div class="text-center">
                <h1>FleetBook</h1>
                <p>System zarzƒÖdzania flotƒÖ pojazd√≥w</p>
                <p>Aby korzystaƒá z systemu, zaloguj siƒô.</p>
                <a href="/login" class="btn btn-primary btn-lg">Przejd≈∫ do logowania</a>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<CarDto>? cars;
    private CarDto formCar = new();
    private int deleteCarId;
    private bool isEditMode;
    private bool isLoading;
    private string errorMessage = "";
    private bool showCarModal;
    private bool showDeleteModal;

    // Removed unused _isInitialized variable

    [CascadingParameter]
    private Task<AuthenticationState> AuthStateTask { get; set; } = default!;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // üîπ KROK 1: Na starcie przywr√≥ƒá token z localStorage
            Console.WriteLine("üîç Home.OnAfterRenderAsync: Initializing authentication from localStorage");
            await AuthStateProvider.InitializeFromLocalStorageAsync();
            
            // üîπ KROK 2: Teraz czekaj a≈º AuthStateProvider powiadomi o zmianie stanu
            await Task.Delay(100); // Daj chwilƒô na propagacjƒô
            
            // üîπ KROK 3: Sprawd≈∫ nowy stan autentykacji
            var authState = await AuthStateTask;
            
            if (authState.User.Identity is null || !authState.User.Identity.IsAuthenticated)
            {
                Console.WriteLine("üîç User still not authenticated after loading token, redirecting to /login");
                Navigation.NavigateTo("/login", forceLoad: true);
                return;
            }

            Console.WriteLine("üîç User is authenticated! Loading cars...");
            cars = await CarApiService.GetCarsAsync();
            Console.WriteLine($"üîç Got {cars?.Count ?? 0} cars from API");
            
             //_isInitialized = true;
            StateHasChanged();
        }
    }

    private async Task OpenAddModal()
    {
        isEditMode = false;
        formCar = new CarDto();
        errorMessage = "";
        showCarModal = true;
        StateHasChanged();
    }

    private async Task OpenEditModal(CarDto car)
    {
        isEditMode = true;
        formCar = new CarDto
        {
            Id = car.Id,
            Marka = car.Marka,
            Model = car.Model,
            Rejestracja = car.Rejestracja,
            Rok = car.Rok,
            Dostepny = car.Dostepny
        };
        errorMessage = "";
        showCarModal = true;
        StateHasChanged();
    }

    private async Task SaveCar()
    {
        if (string.IsNullOrWhiteSpace(formCar.Marka) || string.IsNullOrWhiteSpace(formCar.Model))
        {
            errorMessage = "Marka i model sƒÖ wymagane!";
            return;
        }

        isLoading = true;
        try
        {
            bool success;
            if (isEditMode)
            {
                success = await CarApiService.UpdateCarAsync(formCar.Id, formCar);
            }
            else
            {
                success = await CarApiService.AddCarAsync(formCar);
            }

            if (success)
            {
                cars = await CarApiService.GetCarsAsync();
                await CloseModal();
                errorMessage = "";
            }
            else
            {
                errorMessage = "B≈ÇƒÖd podczas zapisywania samochodu!";
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ConfirmDelete(int id)
    {
        deleteCarId = id;
        showDeleteModal = true;
        StateHasChanged();
    }

    private async Task DeleteCar()
    {
        isLoading = true;
        try
        {
            var success = await CarApiService.DeleteCarAsync(deleteCarId);
            if (success)
            {
                cars = await CarApiService.GetCarsAsync();
                await CloseDeleteModal();
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CloseModal()
    {
        showCarModal = false;
        formCar = new();
        errorMessage = "";
        StateHasChanged();
    }

    private async Task CloseDeleteModal()
    {
        showDeleteModal = false;
        deleteCarId = 0;
        StateHasChanged();
    }


    private async Task Logout()
{
    Console.WriteLine("üîç Home.Logout CLICKED");

    try
    {
        await AuthStateProvider.NotifyUserLogoutAsync();
        Console.WriteLine("üîç Home.Logout: NotifyUserLogoutAsync DONE");
    }
    catch (Exception ex)
    {
        Console.WriteLine($"üîç Home.LOGOUT ERROR: {ex.Message}");
    }

    Navigation.NavigateTo("/login", forceLoad: true);
}
}

