@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@rendermode InteractiveServer

<div class="container mt-5">
    <h1>FleetBook</h1>
    <p>Witaj w systemie rezerwacji pojazdów!</p>
    
    <AuthorizeView>
        <Authorized>
            <p>Zalogowany jako: <strong>@context.User.Identity?.Name</strong></p>
            <a href="/logout" class="btn btn-danger">Wyloguj się</a>
        </Authorized>
        <NotAuthorized>
            <p>Aby korzystać z systemu, zaloguj się.</p>
            <a href="/login" class="btn btn-primary">Przejdź do logowania</a>
        </NotAuthorized>
    </AuthorizeView>
</div>

