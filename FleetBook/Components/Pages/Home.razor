@page "/"
@using FleetBook.Models
@using FleetBook.Services
@rendermode InteractiveServer
@inject CarService CarService

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Flota samochodów</h1>
        <button class="btn btn-success" @onclick="AddNewCar">
            + Dodaj nowy samochód
        </button>
    </div>

    <EditCarModal @ref="EditModal" EditingCar="@SelectedCar" OnSave="@SaveCar" />

    @if (cars == null)
    {
        <p>Ładowanie...</p>
    }
    else
    {
        <!-- Desktop view (lg i wyżej) -->
        <div class="d-none d-lg-block">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th style="cursor: pointer;" @onclick="@(() => SortByColumn("id"))">
                            ID<span class="ms-2">@GetSortIndicator("id")</span>
                        </th>
                        <th style="cursor: pointer;" @onclick="@(() => SortByColumn("marka"))">
                            Marka<span class="ms-2">@GetSortIndicator("marka")</span>
                        </th>
                        <th style="cursor: pointer;" @onclick="@(() => SortByColumn("model"))">
                            Model<span class="ms-2">@GetSortIndicator("model")</span>
                        </th>
                        <th style="cursor: pointer;" @onclick="@(() => SortByColumn("rejestracja"))">
                            Rejestracja<span class="ms-2">@GetSortIndicator("rejestracja")</span>
                        </th>
                        <th>Rok</th>
                        <th style="cursor: pointer;" @onclick="@(() => SortByColumn("dostepny"))">
                            Dostępny<span class="ms-2">@GetSortIndicator("dostepny")</span>
                        </th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var car in cars)
                    {
                        <tr>
                            <td>@car.Id</td>
                            <td>@car.Marka</td>
                            <td>@car.Model</td>
                            <td>@car.Rejestracja</td>
                            <td>@car.Rok</td>
                            <td>
                                <span class="badge @(car.Dostepny ? "bg-success" : "bg-danger")">
                                    @(car.Dostepny ? "Dostępny" : "Niedostępny")
                                </span>
                            </td>
                            <td>
                                <button class="btn btn-warning btn-sm" @onclick="() => EditCar(car)">
                                    Modyfikuj
                                </button>
                                <button class="btn btn-danger btn-sm" @onclick="() => DeleteCar(car.Id)">
                                    Usuń
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Mobile view (mniejsze ekrany) -->
        <div class="d-lg-none">
            @foreach (var car in cars)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-6">
                                <strong>Marka:</strong> @car.Marka
                            </div>
                            <div class="col-6">
                                <strong>Model:</strong> @car.Model
                            </div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-6">
                                <strong>Rejestracja:</strong> @car.Rejestracja
                            </div>
                            <div class="col-6">
                                <strong>Rok:</strong> @car.Rok
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-12">
                                <strong>Status:</strong>
                                <span class="badge @(car.Dostepny ? "bg-success" : "bg-danger")">
                                    @(car.Dostepny ? "Dostępny" : "Niedostępny")
                                </span>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-warning btn-sm flex-grow-1" @onclick="() => EditCar(car)">
                                Modyfikuj
                            </button>
                            <button class="btn btn-danger btn-sm flex-grow-1" @onclick="() => DeleteCar(car.Id)">
                                Usuń
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Car>? cars;
    private Car? SelectedCar;
    private EditCarModal? EditModal;
    
    private string currentSortColumn = "id";
    private bool sortAscending = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadCars();
    }

    private async Task LoadCars()
    {
        cars = await CarService.GetCarsSortedAsync(currentSortColumn, sortAscending);
    }

    private async Task SortByColumn(string columnName)
    {
        if (currentSortColumn == columnName)
        {
            sortAscending = !sortAscending;
        }
        else
        {
            currentSortColumn = columnName;
            sortAscending = true;
        }
        await LoadCars();
    }

    private string GetSortIndicator(string columnName)
    {
        if (currentSortColumn != columnName) return "";
        return sortAscending ? " ▲" : " ▼";
    }

    private void EditCar(Car car)
    {
        SelectedCar = new Car 
        { 
            Id = car.Id,
            Marka = car.Marka,
            Model = car.Model,
            Rejestracja = car.Rejestracja,
            Rok = car.Rok,
            Dostepny = car.Dostepny
        };
        EditModal?.Open(isNew: false);
    }

    private void AddNewCar()
    {
        SelectedCar = new Car 
        { 
            Marka = "",
            Model = "",
            Rejestracja = "",
            Rok = DateTime.Now.Year,
            Dostepny = true
        };
        EditModal?.Open(isNew: true);
    }

    private async Task SaveCar()
    {
        try
        {
            if (SelectedCar != null)
            {
                if (SelectedCar.Id == 0)
                {
                    await CarService.AddCarAsync(SelectedCar);
                }
                else
                {
                    await CarService.UpdateCarAsync(SelectedCar);
                }
                await LoadCars();
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Błąd: {ex.Message}");
        }
    }

    private async Task DeleteCar(int id)
    {
        await CarService.DeleteCarAsync(id);
        await LoadCars();
        StateHasChanged();
    }
}
